      "Properties": {
        "TemplateURL": {
          "Ref": "WAFWEBACL1CFTURL"
        },
        "TimeoutInMinutes": "15",
        "Parameters": {
          "WebACL1": {
            "Ref": "WebACL1Name"
          },
          "WebACL1Action": {
            "Ref": "WAFWebACL1Action"
          },
          "ByteURIRule2": {
            "Fn::GetAtt": [
              "WAFByteURI2",
              "Outputs.WAFByteURIRule2ID"
            ]
          },
          "ByteHeaderRule2": {
            "Fn::GetAtt": [
              "WAFByteHeader2",
              "Outputs.WAFByteHeaderRule2ID"
            ]
          },
          "ManualIPRule1": {
            "Fn::GetAtt": [
              "WAFIP1",
              "Outputs.WAFManualIPRule1ID"
            ]
          },
          "AutoIPRule1": {
            "Fn::GetAtt": [
              "WAFIP1",
              "Outputs.WAFAutoIPRule1ID"
            ]
          },
          "SQLiRule1": {
            "Fn::GetAtt": [
              "WAFSQLi1",
              "Outputs.WAFSQLiRule1ID"
            ]
          },
          "XssRule1": {
            "Fn::GetAtt": [
              "WAFXss1",
              "Outputs.WAFXssRule1ID"
            ]
          },
          "SizeRule1": {
