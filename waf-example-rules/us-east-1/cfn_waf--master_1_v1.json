            "Fn::GetAtt": [
              "WAFByteURI1",
              "Outputs.WAFByteURIRule1ID"
            ]
          }
        }
      }
    },
    "WAFByteURI2": {
      "Type": "AWS::CloudFormation::Stack",
      "DependsOn": "WAFIP1",
      "Properties": {
        "TemplateURL": {
          "Ref": "WAFByteURI2CFTURL"
        },
        "Parameters": {
          "WhiteListIPCondition1": {
            "Fn::GetAtt": [
              "WAFIP1",
              "Outputs.WAFWhiteListIPCondition1ID"
            ]
          }
        }
      }
    },
    "WAFByteHeader2": {
